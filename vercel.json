{
  "framework": "nextjs",
  "buildCommand": "prisma generate && pnpm run build", // Correct: runs prisma generate, then your package.json build script
  "installCommand": "pnpm install",
  "regions": ["cpt1"],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "DATABASE_URL": "your_actual_database_url_from_vercel_env_vars", // Make sure this is set in Vercel
    "PRISMA_GENERATE_SKIP_AUTOINSTALL": "true", // Optional, but good practice
    "SEED_DATABASE": "true", // If you use this
    "SKIP_ENV_VALIDATION": "1" // Helpful for Vercel builds
  }
}
